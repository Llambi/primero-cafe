---
const { title, subtitle } = Astro.props;
---

<section class="mx-auto py-2 w-10/12 rn-box">
    <h2 class="text-center font-bold text-lg">{title}</h2>
    {
        subtitle && (
            <p class="px-2 py-1 mx-auto mb-5 w-fit font-thin text-xs text-center bg-gray-300/10 rounded-md">
                {subtitle}
            </p>
        )
    }
    <div class="flex flex-col gap-8 flex-wrap">
        <slot />
    </div>
</section>
